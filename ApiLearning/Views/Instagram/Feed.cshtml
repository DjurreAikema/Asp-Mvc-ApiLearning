@using ApiLearning.Models

<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        margin: 20px 0px;
    }

    /* On mouse-over, add a deeper shadow */
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }
</style>

@{
    ViewBag.Title = "Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feed</h2>

@model List<Datum>

@foreach (var post in Model)
{
    <div class="card">
        <div class="row">
            <div class="col-md-4">
                <a href="@post.link">
                    <img src="@post.images.standard_resolution.url" style="width: 100%"/>
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1>
                        <a href="@post.link" style="text-decoration: none; color: inherit">
                            @(post.caption != null ? post.caption.text : "No caption")
                        </a>
                    </h1>
                    <h4 class="text-muted">
                        <img src="@post.user.profile_picture" style="width: 24px"/>
                        @post.user.full_name
                    </h4>
                    <br/><br/><br /><br /><br /><br /><br /><br /><br />
                    <p>Likes: @post.likes.count</p>
                    <p>Comments: @post.comments.count</p>
                </div>
            </div>
        </div>
    </div>
}